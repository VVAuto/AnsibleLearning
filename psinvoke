# Welcome message
Write-Host "Welcome to the PowerShell menu!"

# Main menu
do {
    # Display options
    Write-Host "Select an option:"
    Write-Host "1. Option 1"
    Write-Host "2. Option 2"
    Write-Host "3. Option 3"
    Write-Host "4. Option 4"

    # Prompt user for choice
    $choice = Read-Host "Enter your choice (1-4)"

    # Process user choice
    switch ($choice) {
        '1' {
            # Task for Option 1
            Write-Host "You selected Option 1."
            # Perform task for Option 1
        }
        '2' {
            # Task for Option 2
            Write-Host "You selected Option 2."
            # Perform task for Option 2
        }
        '3' {
            # Task for Option 3
            Write-Host "You selected Option 3."
            # Perform task for Option 3
        }
        '4' {
            # Task for Option 4
            Write-Host "You selected Option 4."
            # Perform task for Option 4
        }
        default {
            Write-Host "Invalid choice. Please select a number between 1 and 4."
            # Continue to prompt for choice
            continue
        }
    }

    # Ask user to return to main menu or close
    $decision = Read-Host "Would you like to go back to the main menu (main) or close (close)?"
    if ($decision -eq "main") {
        # Go back to main menu
        continue
    } elseif ($decision -eq "close") {
        # Close the script
        break
    }
} while ($true)