function toggleVisibility(selectName, boxId) {
  const value = document.querySelector(`[name="${selectName}"]`).value;
  const box = document.getElementById(boxId);
  box.style.display = (value === 'yes') ? 'block' : 'none';
}

window.onload = function () {
  const experienceSelect = document.querySelector('[name="experience"]');
  const certificationSelect = document.querySelector('[name="certification"]');

  if (experienceSelect) {
    experienceSelect.addEventListener('change', () => toggleVisibility('experience', 'experience-box'));
  }

  if (certificationSelect) {
    certificationSelect.addEventListener('change', () => toggleVisibility('certification', 'certification-box'));
  }

  // Initial state on load
  toggleVisibility('experience', 'experience-box');
  toggleVisibility('certification', 'certification-box');
};