# Replace these values with your remote Windows machine's information
$remoteHost = "remote_host_name_or_ip"
$remoteUsername = "your_username"
$remotePassword = "your_password"

# Create a PSCredential object for authentication
$securePassword = ConvertTo-SecureString -AsPlainText $remotePassword -Force
$cred = New-Object System.Management.Automation.PSCredential ($remoteUsername, $securePassword)

# Create a new remote PowerShell session
$session = New-PSSession -ComputerName $remoteHost -Credential $cred

# Enter the remote session to execute commands
Enter-PSSession $session

# Now you are in the remote session and can run PowerShell commands on the remote machine
# For example, run the Get-Process command:
Get-Process

# To exit the remote session, use the Exit-PSSession cmdlet
Exit-PSSession

